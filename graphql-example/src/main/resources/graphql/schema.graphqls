

type Book{
    id:ID!
    name:String
    description:String
    price:Float
    author:String
    pages:Int
    attributes: JSON
}



type Mutation{
    createBook(book:BookInput):Book
}
type Query{
    allBooks:[Book]
    getBook(bookId:Int):Book
}




input BookInput{
    name:String
    description:String
    price:Float
    author:String
    pages:Int
    attributes: JSON
}

scalar JSON